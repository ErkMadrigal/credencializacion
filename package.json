  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.serprosep.credencializacion",
    "productName": "Credencializaci√≥n",
    "win": {
      "target": ["nsis"], 
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"], 
      "icon": "assets/icon.icns" 
    },
    "linux": {
      "target": ["deb", "rpm"], 
      "icon": "assets/icon.png" 
    },
    "files": [
      "main.js",
      "server.js",
      "public/**/*", 
      "node_modules/**/*" 
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "public/",
        "filter": ["**/*"]
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ]
  }
